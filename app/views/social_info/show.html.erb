<%- model_class = SocialInfo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:website) %>:</strong></dt>
  <dd><%= @social_info.website %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fb) %>:</strong></dt>
  <dd><%= @social_info.fb %></dd>
  <dt><strong><%= model_class.human_attribute_name(:linkedin) %>:</strong></dt>
  <dd><%= @social_info.linkedin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:twitter) %>:</strong></dt>
  <dd><%= @social_info.twitter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @social_info.user_id %></dd>
</dl>

<%= link_to "Back", "/#{current_user.nick}", :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_social_info_path(@social_info), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              social_info_path(@social_info),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
